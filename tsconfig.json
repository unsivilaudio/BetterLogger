{
    "compilerOptions": {
        "target": "es2020",
        "lib": ["es2020", "ES2017", "es7", "es6"],
        "module": "commonjs",
        "rootDir": "./src",
        "allowUmdGlobalAccess": true,
        "allowJs": true,
        "checkJs": true,
        "declaration": true,
        "outDir": "./dist",
        "esModuleInterop": true,
        "forceConsistentCasingInFileNames": true,
        "strict": true,
        "noImplicitAny": false
    },
    "include": ["src/**/*.ts"],
    "exclude": ["node_modules", "dist"]
}
